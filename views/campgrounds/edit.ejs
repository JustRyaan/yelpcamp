<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit "<%= campground.name %>"</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label for="cgdName">Campground Name:</label>
                        <input class="form-control" type="text" id="cgdName" placeholder="Rainy Creek" value="<%= campground.name %>" name="campground[name]" required minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="cgdImage">Image URL:</label>
                        <input class="form-control" type="text" id="cgdImage" placeholder="https://i.imgur.com/rainycreek.jpg" value="<%= campground.image %>" name="campground[image]" required>
                    </div>
                    <div class="form-group">
                        <label for="cgdPrice">Price Per Night:</label>
                        <div class="input-group">
                            <span class="input-group-addon">Â£</span>
                            <input type="number" min="0" class="form-control" id="cgdPrice" placeholder="To the nearest pound" value="<%= campground.price %>" name="campground[price]" required step="none">
                            <span class="input-group-addon">.00</span>
                        </div>
                        <p class="tooltip"><em>Set to 0 for a free campsite</em></p>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="cgdDesc">Short Description:</label>
                        <textarea rows="6" class="form-control" type="text" id="cgdDesc" placeholder="A beautiful, isolated campsite with stunning views all around..." name="campground[description]" required minlength="30"><%= campground.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-success btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds"><i class="fas fa-chevron-circle-left"></i> Back to campgrounds</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>