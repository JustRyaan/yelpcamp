<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label for="comText">Comment:</label>
                        <input class="form-control" type="text" id="comText" placeholder="Awesome campsite! Great Value for money..." value="<%= comment.text %>" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-success btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds"><i class="fas fa-chevron-circle-left"></i> Back to campgrounds</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>